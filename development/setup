# /bin/bash

print_separator() {
	echo -------------------
}

cd ~/.dotfiles/development

# Install apps
print_separator
echo "Installing apps"
brew bundle install -v --file=~/.dotfiles/development/Brewfile

# Git global settings
print_separator
read -p "Do you wish to setup your git config? (y/n) " SETUP_GIT

if [[ $SETUP_GIT = "y" ]]; then
	./git_config
fi

# Install scripts
print_separator
echo "Installing scripts..."
SCRIPT_DIR=~/.dotfiles/development/scripts/
for file in "$SCRIPT_DIR*" ; do
	name=$(basename $file)
	echo "	Installing $name"
	ln -s $file /usr/local/bin/$name
done
