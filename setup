#! /bin/bash

print_separator() {
	echo -------------------
}

# Install Homebrew
BREW_INSTALLED=$(command -v brew) 
if ! [ -x $BREW_INSTALLED ]; then 
	echo Installing homebrew... 
	/usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
	source ~/.bashrc
else
	echo Homebrew was already installed, continuing...
fi

# Install brewy thingies
print_separator
echo Installing apps...
brew update
cd ~/.dotfiles && brew bundle install --file=./Brewfile

# Do we need to install development things?
print_separator
read -p "Are you going to write code on this machine? (y/n) " install_dev_things
if [[ "$install_dev_things" = "y" ]]; then
	echo Running dev setup script...
	./development/setup
fi

# Figure out if we're going to install anything else
print_separator
read -p "Do you want to install personal computer stuff as well? (y/n) " install_home_things
if [[ "$install_home_things" = "y" ]]; then
	echo Running home setup script...
	./home/setup
fi

# Setup ZSH as default shell
print_separator
if ! [[ $SHELL = *"zsh"* ]]; then
	echo Setting up zsh...
	chsh -s /usr/local/bin/zsh
else
	echo zsh is already the default shell
fi

print_separator
echo Setting up oh-my-zsh...
sh -c "$(curl -fsSL https://raw.github.com/robbyrussell/oh-my-zsh/master/tools/install.sh)"

# Install dotfiles
print_separator
echo Installing dotfiles...

for file in ./.*rc ; do
	name=$(echo $file | sed 's/\.\///')
	rm -f ~/$name
	ln -s ~/.dotfiles/$name ~/$name
done


# Create Code folder
print_separator
echo Creating Code folder
mkdir -p ~/Code

# Connect to git through ssh
cd ~/.dotfiles
print_separator
echo Fixing .dotfiles git remote...
git remote remove origin
git remote add origin git@github.com:jaimerodas/.dotfiles.git
git fetch origin
git branch --set-upstream-to=origin/master master

print_separator
echo "All done!"
cd ~/
